datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Feedback {
    id           String  @id @default(uuid())
    type         String
    comment      String
    screenshot   String?
    emailSendTo  String?
    emailReplyTo String?

    User   User?   @relation(fields: [userId], references: [id])
    userId String?

    @@map("feedsbacks")
}

model User {
    id         String    @id @default(uuid())
    github_id  Int       @unique
    username   String
    name       String
    email      String?
    avatar_url String?
    createdAt  DateTime?
    updatedAt  DateTime?

    Feedback Feedback[]

    @@map("users")
}
